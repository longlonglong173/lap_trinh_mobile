<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:height="100dp"
        android:background="@color/button_gray"
        android:ellipsize="none"
        android:gravity="center"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/primary_text"
        android:textSize="60dp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/CE_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="clearLastChar"
            android:text="CE"
            android:textColor="@color/primary_text"
            android:textSize="30sp" />

        <Button
            android:id="@+id/C_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="clearAll"
            android:text="C"
            android:textColor="@color/primary_text"
            android:textSize="30sp" />

        <Button
            android:id="@+id/BS_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:text="BS"
            android:textColor="@color/primary_text"
            android:textSize="30sp" />

        <Button
            android:id="@+id/division_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="handleOperator"
            android:text="/"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:minHeight="90dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/s7_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="7"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/s8_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="8"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/s9_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:minHeight="90dp"
            android:onClick="clickToNumber"
            android:text="9"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="handleOperator"
            android:text="X"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:minHeight="90dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/s4_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="4"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/s5_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="5"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/s6_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="6"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="handleOperator"
            android:text="-"
            android:textColor="@color/primary_text"
            android:textSize="40sp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:minHeight="90dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/s1_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="1"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/s2_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="2"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/s3_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="3"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/plus_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="handleOperator"
            android:text="+"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:minHeight="90dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/mix_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:text="+/-"
            android:textColor="@color/primary_text"
            android:textSize="25sp" />

        <Button
            android:id="@+id/s0_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_white"
            android:onClick="clickToNumber"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textSize="40sp" />

        <Button
            android:id="@+id/point_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="handleOperator"
            android:text="."
            android:textColor="@color/primary_text"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/equal_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_gray"
            android:onClick="handleOperator"
            android:text="="
            android:textColor="@color/primary_text"
            android:textSize="40sp"

            />
    </LinearLayout>
</LinearLayout>